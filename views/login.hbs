<div class="form-container">
  <div class="for-loggin">
  <div id="login-error" class="hidden warning">something</div>
  <h2>Log In</h2>
  <div class="login-content">
    <form class="login-form">
      <div class="input-row">
        <label for="email-login">Email:</label>
        <input type="text" id="email-login" name="email" />
      </div>
    <div class="input-row">
      <label for="password-login">Password:</label>
      <input type="password" id="password-login" name="password" />
  </div>
  <div class="center">
    <button type="submit">login</button>
    </div>
  </form>
  </div>

</div>

<div class="for-signup">
  <div id="signup-error" class="hidden warning">something</div>
  <h2>Sign Up</h2>
  <div class="signup-content">
    <form class="signup-form">
      <div class="input-row">
        <label for="username-signup">Username:</label>
        <input type="text" id="username-signup" name="username"/>
      </div>
      <div class="input-row">
        <label for="email-signup">Email:</label>
        <input type="text" id="email-signup" name="email" />
      </div>
      <div>
        <label for="password-signup">Password:</label>
        <input type="password" id="password-signup" name="password"/>
      </div>
      <div class="center">
        <button type="submit">signup</button>
      </div>
    </form>
  </div>
</div>
</div>


<script src="/javascript/login.js"></script>