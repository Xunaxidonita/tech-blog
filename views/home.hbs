
<div class="posts">
    <div class="post-list">
        {{#each posts as |post|}}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><a href="/post/{{post.id}}" target="_blank">{{post.title}}</a></h5>
                    <p class="card-text">by {{this.user.username}} on {{format_date post.created_at}}</p>
                </div>
                <div class="card-body">
                    <p class="card-text">{{post.description}}</p>
                    <a href="/post/{{id}}">{{post.comments.length}} comment(s)</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>